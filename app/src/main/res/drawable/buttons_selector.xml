<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <size android:width="100dp" android:height="50dp" /> <!-- Розмір для стану натисненої кнопки -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_primary"/>
            <size android:width="120dp" android:height="60dp" /> <!-- Розмір для стану фокусованої кнопки -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/design_default_color_error"/>
            <size android:width="80dp" android:height="40dp" /> <!-- Стандартний розмір кнопки -->
        </shape>
    </item>
</selector>
