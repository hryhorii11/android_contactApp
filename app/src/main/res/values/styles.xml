<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextColor" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="edit_text_auth_activity">
        <item name="android:theme">@style/TextColor</item>
        <item name="barrierDirection">top</item>
        <item name="hintAnimationEnabled">@string/email</item>
        <item name="hintEnabled">true</item>

        <item name="hintTextColor">@color/grey</item>
        <item name="expandedHintEnabled">true</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxBackgroundMode">none</item>
    </style>



    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/themeColor</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="controlBackground">@color/themeColor</item>
    </style>
    <style name="checkBoxMultiSelectStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/transparentColor</item>
        <item name="colorControlActivated">@color/transparentColor</item>
        <item name="controlBackground">@color/transparentColor</item>
    </style>
</resources>